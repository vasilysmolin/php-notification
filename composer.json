{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public",
        "lint-fix": "composer exec phpcbf -v",
        "test": "phpunit --colors=always"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    }
}
